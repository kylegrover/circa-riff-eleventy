<!doctype html>
<html {% if section %} data-current="{{ section }}" {% endif %} lang="en">

    {% include "components/head.njk" %}

    <body class="layout-{{ layout | replace("layouts/","") | replace(".njk","") }}">

        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v8.0" nonce="VTgpuZaE"></script>

            
        {% if title == 'Home' %}
            <div class="hero-wrapper">
                <div class="hero-image" style="background-image: url(/static/img/circadian-riff-banner-1.jpg)"></div>
                {# <div class="hero-logo" style="background-image: url({{ metadata.logo_stacked }}); background-size: 400px;"></div> #}
            </div>
        {% endif %}

        {% if page.inputPath | startswithposts %}
            <div class="hero-wrapper">
                <div class="hero-image" style="background-image: url({{ image }})"></div>
                {# <div class="hero-logo" style="background-image: url({{ metadata.logo_stacked }}); background-size: 400px;"></div> #}
            </div>
        {% endif %}

        <header class="site-header">
            <div class="nav-background">
                <div class="nav-wrapper">
                    {# <h1 class="site-title">
                        <a href="{{ '/' | url }}"><img src="{{ metadata.logo }}" height="80"></a>
                    </h1> #}
                    {# <div class="header-phone">
                        <a href="{{ metadata.phone_link }}">Call {{ metadata.phone }}</a>
                    </div> #}
                    {% include "components/nav.njk" %}
                    {% include "components/social-links.njk" %}
                </div>
            </div>

        </header>

        <main class="site-main">
            <div class="wrapper">
                <div class="main-col">
                    {{ layoutContent | safe }}
                </div>
                <div class="sec-col">

                    <section class="art-grid">
                        {% for post in collections.post %}
                            <a class="art-grid-item" href="{{ post.url | url }}" style="background-image: url({{ post.data.image }}); background-position: center; background-sizing: cover;"></a>
                        {% endfor %}
                    </section>

                </div>
            </div>
        </main>

        {% include "components/footer.njk" %}

    </body>
    
    {% set js %}
    {% include "assets/js/inline.js" %}
    {% endset %}
    <script>
        {{ js | jsmin | safe }}
    </script>
</html>